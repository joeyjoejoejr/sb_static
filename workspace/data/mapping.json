{
  "BlogCategories": {
    "content_type": "Category",
    "type": "entry",
    "fields": {
      "name": "name",
      "slug": "slug"
    },
    "links": {
      "many": [{
        "relation_to": "BlogPosts",
        "primary_id": "category_id"
      }]
    }
  },

  "BlogPosts": {
    "content_type": "Post",
    "type": "entry",
    "fields": {
      "title": "title",
      "summary": "summary",
      "body": "body",
      "slug": "slug",
      "published_at": "published",
      "author_name": "authorName"
    },
    "links": {
      "belongs_to": [{
        "relation_to": "BlogCategories",
        "foreign_id": "category_id"
      }],

      "many_through": [{
        "relation_to": "BlogTags",
        "primary_id": "post_id",
        "foreign_id": "tag_id",
        "through": "blog_taggings"
      },
      {
        "relation_to": "Employees",
        "primary_id": "post_id",
        "foreign_id": "employee_id",
        "through": "post_authors"
      }]
    }
  },

  "BlogTags": {
    "content_type": "Tag",
    "type": "entry",
    "fields": {
      "name": "name",
      "slug": "slug"
    },
    "links": {
      "many_through": [{
        "relation_to": "BlogPosts",
        "primary_id": "tag_id",
        "foreign_id": "post_id",
        "through": "blog_taggings"
      }]
    }
  },

  "Employees": {
    "content_type": "Employee",
    "type": "entry",
    "fields": {
      "name": "name",
      "title": "title",
      "about": "about",
      "slug": "slug",
      "email": "email",
      "seniority": "seniority",
      "published": "published",
      "image_alt_text": "imageAltText",
      "mugshot_alt_text": "mugshotAltText"
    },
    "links": {
      "many_through": [{
        "relation_to": "Roles",
        "primary_id": "employee_id",
        "foreign_id": "role_id",
        "through": "employees_roles"
      },
      {
        "relation_to": "BlogPosts",
        "primary_id": "employee_id",
        "foreign_id": "post_id",
        "through": "post_authors"
      }]
    }
  },

  "Roles": {
    "content_type": "Role",
    "type": "entry",
    "fields": { "name": "name" },
    "links": {
      "many_through": [{
        "relation_to": "Employees",
        "primary_id": "role_id",
        "foreign_id": "employee_id",
        "through": "employees_roles"
      }]
    }
  },

  "Jobs": {
    "content_type": "Job",
    "type": "entry",
    "fields": { 
      "title": "title",
      "description": "description",
      "responsabilities": "responsibilities",
      "looking_for": "lookingFor",
      "active": "active",
      "submit_class": "submitClass",
      "importance": "importance"
    },
    "links": {}
  }
}
