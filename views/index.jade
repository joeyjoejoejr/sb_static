extends layout

block content
  section.section-pink.home-header
    div.banner-carousel.owl-carousel.owl-theme
      each case_study in contentful.featured_case_studies
        .item(style="background-image: url('#{asset(case_study.background)}');")
          .project-description
            h1=case_study.headerTitle
            p.byline=case_study.headerSubtitle
            a.view-more.button(href="/work/#{case_study.url}") View Project

  section.section-white.services
    .row.main
      .columns.intro
        h1.fade1 We
        h1.fade2 Smash
        h1
          span.fade3 Th
          span.fade4 ing
          span.fade5 s
      p.centered Whatever you imagine, we bring to life an amplified version of it.
    .hr
    .row
      .large-13.columns.service-list.small-centered
        .list-border
          span Web
          ul
            li Ruby on Rails
            li JavaScript
            li Node.js
            li AngularJS
            li API Development
        .list-border
          span Mobile
          ul
            li API Integrations
            li Responsive Design
            li iOS
            li Android
            li PhoneGap
        .list-border
          span Experience Design
          ul
            li Information Architecture
            li Prototyping
            li Wireframing
            li Interface Design
            li User Research
        .list-border
          span Strategy
          ul
            li Market Analysis
            li Brand Workshops
            li Phase Planning
            li Launch Strategy
            li Product Management
        .list-border
          span Growth Engineering
          ul
            li KPI Discovery
            li Web & Mobile Analytics
            li Testing/Optimization
            li SEO/SEM
            li Social Listening
        .list-border
          span Branding
          ul
            li Brand Identity
            li Logo Design
            li Art Direction
            li Photography

  section
    #home-carousel.carousel.js-slider
      each featured_post in contentful.featured_blog_posts
        -
          var post = contentful.blog_posts.filter(function(post) {
            return post.sys.id === featured_post.sys.id;
          })[0];

        .slide
          .slide-image-wrapper
            .overlay
            img.background.owl-lazy(data-src!=asset(post.image))
          .slide-container
            .large-7.small-16.columns.small-centered
              h2.blog-title= post.title
              a.button.blog-button(href=post._url) See Out Latest Idea

  section.section-white.social
    .row.columns.small-centered
      #dribbble-container.short
        .content-header.centered
          h5 Dribbble
        hr
        .post
          ul.large-block-grid-3.medium-block-grid-2.small-block-grid-1
